generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String       @id @default(uuid())
  email        String       @unique
  passwordHash String
  role         Role         @default(USER)
  controls     Control[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  auditEvents  AuditEvent[]
}

enum Role {
  ADMIN
  SECURITY
  AUDITOR
  USER
}

model Control {
  id               String            @id @default(uuid())
  code             String            @unique
  title            String
  description      String?
  category         String?
  status           ControlStatus     @default(NOT_STARTED)
  ownerId          String?
  owner            User?             @relation(fields: [ownerId], references: [id])
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  controlEvidences ControlEvidence[]
  auditEvents      AuditEvent[]
}

enum ControlStatus {
  NOT_STARTED
  IN_PROGRESS
  IMPLEMENTED
  NOT_APPLICABLE
}

model ControlEvidence {
  id        String       @id @default(uuid())
  controlId String
  type      EvidenceType @default(NOTE)
  note      String?
  link      String?
  createdAt DateTime     @default(now())

  control Control @relation(fields: [controlId], references: [id], onDelete: Cascade)

  @@index([controlId])
}

enum EvidenceType {
  NOTE
  LINK
}

model AuditEvent {
  id         String          @id @default(uuid())
  action     AuditAction
  entityType AuditEntityType
  entityId   String
  controlId  String?
  actorId    String?
  actor      User?           @relation(fields: [actorId], references: [id])
  meta       Json?
  createdAt  DateTime        @default(now())
  control    Control?        @relation(fields: [controlId], references: [id])

  @@index([controlId, createdAt])
  @@index([entityType, entityId, createdAt])
  @@index([actorId, createdAt])
}

enum AuditEntityType {
  CONTROL
  EVIDENCE
}

enum AuditAction {
  CREATED
  STATUS_CHANGED
  EVIDENCE_CREATED
  EVIDENCE_DELETED
}
