generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String       @id @default(uuid())
  email        String       @unique
  passwordHash String
  role         Role         @default(USER)
  controls     Control[]
  risks        Risk[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  auditEvents  AuditEvent[]
}

enum Role {
  ADMIN
  SECURITY
  AUDITOR
  USER
}

model Control {
  id               String            @id @default(uuid())
  code             String            @unique
  title            String
  description      String?
  category         String?
  status           ControlStatus     @default(NOT_STARTED)
  ownerId          String?
  owner            User?             @relation(fields: [ownerId], references: [id])
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  controlEvidences ControlEvidence[]
  auditEvents      AuditEvent[]
  risks            RiskControl[] // Many-to-Many relation
}

enum ControlStatus {
  NOT_STARTED
  IN_PROGRESS
  IMPLEMENTED
  NOT_APPLICABLE
}

model ControlEvidence {
  id        String       @id @default(uuid())
  controlId String
  type      EvidenceType @default(NOTE)
  note      String?
  link      String?
  createdAt DateTime     @default(now())

  control Control @relation(fields: [controlId], references: [id])

  @@index([controlId])
}

enum EvidenceType {
  NOTE
  LINK
}

model AuditEvent {
  id         String          @id @default(uuid())
  action     AuditAction
  entityType AuditEntityType
  entityId   String
  controlId  String?
  riskId     String?
  actorId    String?
  actor      User?           @relation(fields: [actorId], references: [id])
  meta       Json?
  createdAt  DateTime        @default(now())
  control    Control?        @relation(fields: [controlId], references: [id])
  risk       Risk?           @relation(fields: [riskId], references: [id])

  @@index([controlId, createdAt])
  @@index([riskId, createdAt])
  @@index([entityType, entityId, createdAt])
  @@index([actorId, createdAt])
}

enum AuditEntityType {
  CONTROL
  EVIDENCE
  RISK
}

enum AuditAction {
  CREATED
  STATUS_CHANGED
  EVIDENCE_CREATED
  EVIDENCE_DELETED
  UPDATED
  RISK_CONTROL_LINKED
  RISK_CONTROL_UNLINKED
}

model Risk {
  id          String        @id @default(uuid())
  title       String
  description String?
  severity    Int           @default(1) // 1-5 scale
  likelihood  Int           @default(1) // 1-5 scale
  impact      Int           @default(1) // 1-5 scale
  status      RiskStatus    @default(IDENTIFIED)
  ownerId     String?
  owner       User?         @relation(fields: [ownerId], references: [id])
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  auditEvents AuditEvent[]
  controls    RiskControl[] // Many-to-Many relation
}

enum RiskStatus {
  IDENTIFIED
  ASSESSED
  MITIGATED
  ACCEPTED
  CLOSED
}

model RiskControl {
  riskId    String
  controlId String
  createdAt DateTime @default(now())

  risk    Risk    @relation(fields: [riskId], references: [id], onDelete: Cascade)
  control Control @relation(fields: [controlId], references: [id], onDelete: Cascade)

  @@id([riskId, controlId])
  @@index([riskId])
  @@index([controlId])
}
